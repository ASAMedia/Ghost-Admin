    {{#if isShowingDeleteFileModal}}
    {{#modal-dialog
        onClose=(action "toggleDeleteFileModal")
        targetAttachment="center"
        translucentOverlay=true
    }}
  <h3>Datei löschen</h3>
  <p>Möchten Sie diese Datei wirklich löschen?</p>
  <div class="v-card__actions">
        <div class="spacer"></div>
        <button type="button" {{action "toggleDeleteFileModal"}}
            class="v-btn v-btn--flat v-btn--text theme--light v-size--default primary--text"><span
                class="v-btn__content">Abbrechen</span></button>
        <button {{action "deleteFile"}} type="button"
            class="v-btn v-btn--flat v-btn--text theme--light v-size--default primary--text"><a
                class="v-btn__content">Löschen</a></button>
    </div>  
    {{/modal-dialog}}
    {{/if}}
</section>
